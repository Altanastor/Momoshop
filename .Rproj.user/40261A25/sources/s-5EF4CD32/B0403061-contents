pipe_append <- function(pipe, ...){
  list(...) %>%  
    unlist %>% paste0(., collapse="") %>% 
    append(pipe, .)
}

pipe_cond_append <- function(pipe, cond, ...){
  if (cond)
    pipe_append(pipe, ...)
  else
    pipe
}

pipe <- "image %>%"

pipe %>% pipe_append("yo", "yup") %>% pipe_cond_append(5<3, "yihaa")

x <- list("yo", iris$Species[2], "yop")
x %>% unlist %>% paste0(collapse=" ")
